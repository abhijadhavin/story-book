<div class="row">
	<div class="col s12 m9">
		<h3>{{story.title}}
			<small>{{{editIcon story.user.id user.id story.id}}}
		</h3>
		<div class="card story">
			<div class="card-content">
				<span class="card-title">{{formatDate story.date 'MMMM Do YYYY'}}</span>
				{{{story.body}}}
			</div>
		</div>
		{{#if story.allowComments}}
			<div class="card">
				<div class="card-content">
					<span class="card-title">Comments</span>
					{{#if user}}
						<form method="post" action="/stories/comment/{{story.id}}">
							<div class="input-field">
								<textarea name="commentBody" class="meterialize-textarea"></textarea>
								<label> Add Comment</label>
							</div>
							<input type="submit" class="btn" value="Submit"/>
						</form>
					{{else}}
						<p> please <a href="/auth/google">log<a> in to leave a comment</p>
					{{/if}}
				</div>
			</div>	

			{{#each story.comments}}	
				<div class="card">
					<div class="card-content">
						<h5>{{commentBody}}</h5>
						<div class="chip">
							<img src="{{commentUser.image}}" alt="Contact Person">
							<a href="/stories/user/{{commentUser.id}}">{{commentUser.firstName}}</a<=>
						</div>
						<br>
						<small> Posted: {{formatDate commentDate 'MMMM Do YYYY'}} </small>
					</div>	
				</div>
			{{/each}}	
		{{/if}}	
	</div>
	<div class="col s12 m3">
		<div class="card center-align">
			<div class="card-content">
				<span class="card-title">{{story.user.firstName}}</span>
				<img src="{{story.user.image}}" class="circle responsive-img" />
			</div>
			<div class="card-action">
				<a href="/stories/user/{{story.user.id}}">More Form {{story.user.firstName}} </a>
			<div>
		</div>	
	</div>
</div>